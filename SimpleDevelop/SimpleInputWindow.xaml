<Window x:Class="SimpleDevelop.SimpleInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="" Width="300" Height="150">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label Name="_label"
            Grid.Row="0"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Content="[Message goes here]" />
        
        <TextBox Name="_textBox" Grid.Row="1" FontSize="14" Margin="5" HorizontalAlignment="Stretch" KeyUp="TextBoxKeyUp" />
        
        <Button Name="_okButton" Grid.Row="2" Margin="5" MinWidth="100" HorizontalAlignment="Right" Click="OkButtonClick">OK</Button>
    </Grid>
    
</Window>
